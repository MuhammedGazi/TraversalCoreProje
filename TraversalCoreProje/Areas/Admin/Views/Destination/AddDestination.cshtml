@model EntityLayer.Concrete.Guide
@{
	ViewData["Title"] = "AddDestination";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Oluşturma Sayfası</h1>
<form method="post">
	<div class="form-group">
		@Html.Label("Ad Soyad")
		<input type="text" asp-for="City" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Görsel")
		<input type="text" asp-for="DayNight" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Instagram Url")
		<input type="text" asp-for="Price" class="form-control" />
	</div>
	<br />
	<div class="form-group">
		@Html.Label("Twitter Url")
		<input type="text" asp-for="Image" class="form-control" />
	</div>
	<br />
		<div class="form-group">
		@Html.Label("Açıklama")
		<input type="text" asp-for="Capacity" class="form-control" />
	</div>
	<br />
	<button class="btn btn-outline-primary">Oluştur</button>
</form>